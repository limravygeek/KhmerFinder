<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_level"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/category_background"
    tools:context="com.hangtom.ravy.khmerfinder.activity.ChooseLevelActivity">


    <ImageView
        android:id="@+id/img_level"
        android:layout_marginTop="100dp"
        android:layout_gravity="center|center_horizontal"
        android:src="@drawable/success_level_1"
        android:layout_width="180dp"
        android:layout_height="180dp" />

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/play_next_level"
        android:scaleType="fitCenter"
        android:id="@+id/btn_play_next_level" />
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/choose_level_play"
        android:scaleType="fitCenter"
        android:id="@+id/btn_choose_level" />

</LinearLayout>
