<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_background"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context="com.hangtom.ravy.khmerfinder.activity.SettingActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <Button
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_width="170dp"
                android:background="@drawable/button_music"
                android:layout_height="40dp"
                android:id="@+id/btnMusic" />

            <Button
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="170dp"
                android:background="@drawable/button_sound"
                android:layout_height="40dp"
                android:id="@+id/btnSound" />

            <Button
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="170dp"
                android:background="@drawable/button_vibrate"
                android:layout_height="40dp"
                android:id="@+id/btnVibrate" />

            <Button
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="170dp"
                android:background="@drawable/button_reset"
                android:layout_height="40dp"
                android:id="@+id/btnReset" />
    </LinearLayout>



    <TextView
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textColor="#FFD700"
        android:shadowColor="#302b2b"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="10"
        android:gravity="center_horizontal"
        android:text="វគ្គទាំងអស់ត្រូវបានកំណត់ទ្បើងវិញ!"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtResetsuccess" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_confirm_reset"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="#FFD700"
            android:shadowColor="#302b2b"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="10"
            android:gravity="center_horizontal"
            android:text="ទិន្នន័យទាំងអស់និងត្រូវបានលប់ តើអ្នកចង់បន្តឬទេ?"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="170dp"
                    android:weightSum="3"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_yes_reset"
                        android:background="@drawable/bg_reset_level_enable"
                        android:text="យល់ព្រម"
                        android:layout_weight="1"
                        android:textColor="#ffff"
                        android:layout_width="60dp"
                        android:layout_height="30dp" />
                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                    <Button
                        android:id="@+id/btn_no_reset"
                        android:layout_weight="1"
                        android:background="@drawable/bg_reset_level_enable"
                        android:text="មិនយល់ព្រម"
                        android:textColor="#ffff"
                        android:layout_width="60dp"
                        android:layout_height="30dp" />
                </LinearLayout>
    </LinearLayout>


</LinearLayout>
