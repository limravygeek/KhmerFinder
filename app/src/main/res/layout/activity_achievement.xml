<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_achievement"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.hangtom.ravy.khmerfinder.activity.AchievementActivity">

   <LinearLayout
       android:orientation="horizontal"
       android:background="#01667F"
       android:layout_width="match_parent"
       android:layout_height="120dp">

       <ImageView
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           android:src="@drawable/ic_help"
           android:layout_width="wrap_content"
           android:layout_height="match_parent" />

       <LinearLayout
           android:weightSum="10"
           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="match_parent">

           <TextView
               android:layout_weight="5"
               android:id="@+id/txtTitle"
               android:textSize="35dp"
               android:gravity="center_vertical|bottom"
               android:textStyle="bold"
               android:textColor="#ffff"
               android:textAlignment="gravity"
               android:text="ទទួលបាន HINT"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/txtTotalHint"
               android:layout_weight="2"
               android:textSize="15dp"
               android:textStyle="bold"
               android:textColor="#ead533"
               android:gravity="right|center_vertical"
               android:textAlignment="gravity"
               android:text="សរុប​៖​10 hints"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </LinearLayout>


   </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/recycler_view_achievement"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
